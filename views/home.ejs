<link rel="stylesheet" href="/css/home.css">



<section id="home_content">
    <h1> <%= title %></h1>
    <div id="main_content">
        <div class="about">
            <h4>Event Publishing Web application</h4>
            <p>
                Event publising web application helps in publishing your events to every one. You need to register for
                publishing your event! but no need to register if you want to see public events.
            </p>
            <h4>How it works?</h4>
            <p>Step 1: Click on Sign In button.
                Step 2: Register yourself if you are first time user else Sign In</p>
            Step 3: After validation your credentials from database you get event form

        </div>
        <div class="events">
            <div id="home_button">
                <h2>
                    Sign In for publish events
                </h2>

                <!--         
        <form action="/users/sign-in">
            <input class="btn btn-default" type="submit" value="Sign In">
            <button type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
              </button>
        </form>  -->
            </div>

            <section id="feed-posts">
                <h4>Posts</h4>
                <% if(locals.user){ %>

                <form action="/posts/create" id="new-post-form" method="POST">
                    <textarea name="content" cols="50" rows="4" placeholder="Type here...." required></textarea>
                    <input type="submit" value="Post">
                </form>

                <% } %>



                <div id="posts-list-container">

                    <% for(post of posts){ %>
                    <div>
                        <div>
                            <% if((locals.user) && (locals.user.id == post.user.id)){ %>

                            <small>
                                <a href="/posts/destroy/<%= post.id %>">X</a>
                            </small>
                            <% } %>
                            <h5>
                                <%= post.content %>

                            </h5>
                        </div>
                        <div>
                            <h5><b> Name: </b>
                                <%= post.user.name %>

                            </h5>

                        </div>

                        <div class="post-comment">
                            <% if (locals.user){ %>
                            <form action="/comments/create" method="POST">
                                <input type="text" name="content" placeholder="Type here to add comment...." required>
                                <input type="hidden" name="post" value="<%= post._id %>">
                                <input type="submit" value="Add comment">
                            </form>
                            <% } %>

                            <div class="post-commnets-list">
                                <ul id="post-comments-<%=post._id %> ">
                                    <% for (comment of post.comments) { %>
                                    <p>
                                        <% if((locals.user) && (locals.user.id == comment.user.id)){ %>

                                        <small>
                                            <a href="/comments/destroy/<%= comment.id %>">x</a>
                                        </small>
                                        <% } %>
                                        <%= comment.content %>
                                        <br>
                                        <small style="font-weight: 900">
                                            <%=comment.user.name %>
                                        </small>
                                    </p>

                                    <% } %>
                                </ul>
                            </div>

                        </div>
                    </div>



                    <%} %>

                </div>
            </section>
        </div>
    </div>

</section>