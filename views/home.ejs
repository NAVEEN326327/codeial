                <form action="/posts/create" id="new-post-form" method="POST">
                    <textarea name="content" cols="50" rows="4" placeholder="Type here...." required></textarea>
                    <input type="submit" value="Post">
                </form>

                <% } %>



                <div id="posts-list-container">

                    <% for(post of posts){ %>

                    <%- include('_post') -%>


                    <%} %>

                </div>
            </section>
        </div>
    </div>

</section>