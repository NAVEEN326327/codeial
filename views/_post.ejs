<link rel="stylesheet" href="/css/post.css">


<div id="post-<%= post._id %>" class="post">
    <div class="content1">
        <h1 class="content">
            <%= post.content %>

        </h1>
        <% if((locals.user) && (locals.user.id == post.user.id)){ %>

        <small>
            <a class="delete-post-button" href="/posts/destroy/<%= post.id %>">X</a>
        </small>
        <% } %>
       
    </div>
    <div>
        <h5><b> Posted By: </b>
            <%= post.user.name %>

        </h5>

    </div>

    <div class="post-comment">
        <% if (locals.user){ %>
        <form action="/comments/create" method="POST" id="new-comment-form">
            <input type="text" name="content" placeholder="Type here to add comment...." class="form1" required>
            <input type="hidden" name="post" value="<%= post._id %>" >
            <input type="submit" value="Add comment" class="button">
        </form>
        <% } %>

        <div class="post-commnets-list">
            <ul id="post-comments-<%=post._id %> ">
                <% for (comment of post.comments) { %>

                   
            <%- include('_comment') -%>

                <% } %>
            </ul>
        </div>

    </div>
</div>

<script src="/js/home_comments.js"></script>
